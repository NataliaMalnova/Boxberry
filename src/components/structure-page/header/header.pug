header.head
  .container
    .row
      .col-12
        .head__line.flex-ai-center.justify-content-between
          a(href="/market/").logo.head__logo
            img(src="images/market/Boxberry_logo.png", alt="Boxberry Каталог").img-responsive
          .head__catalog.flex-ai-center
            button.mobile__icon.mobile__icon--tablet(type="button")
              span
            p Каталог товаров
          .head__actions.flex-ai-center
            .head__actions-item.d-flex
              .head__actions-image.d-flex
                +image-compare({})
                .head__actions-count.flex-center
                  p 1
              p.head__actions-title Сравнение
            .head__actions-item.d-flex(data-show-modal="overlay__favorites")
              .head__actions-image.d-flex 
                +image-favorites({})
                .head__actions-count.flex-center
                  p 1
              p.head__actions-title Избранное

          .search
            .search__wrap
              i.icon-search 
              form(action="/market/site/search/" method="GET") 
                input(type="text" name="name" value="" placeholder="наушники эйр подс").search__input
